<h3>いいねした投稿一覧</h3>

<ul class = "media-list">
   <% @likes.each do |like| %>
  <li class="media">
      <div class="media-left">
         <img src= "<%= gravatar_url(like.user, { size: 50}) %>" alt="" >
      </div>
      <div class="media-body">
         <div>
             <%= link_to like.user.name, user_path(like.user) %>
             <span>投稿日時<%= like.created_at %></span>
         </div>
          <div>
              <p><%= like.content %></p>
          </div>
<% end %>