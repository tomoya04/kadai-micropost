<h3><%= @user.name %></h3>

    <img src = "<%= gravatar_url(@user, { size: 500 }) %>" alt="">

    <%= render "relationships/follow_button", user: @user %>
    <ul class = "nav nav-tab nav-justified">
      <li class ="<%= "active" if current_page?(user_path(@user))%>"><%= link_to user_path(@user) do %>投稿<span class = "badge"><%= @count_microposts %></span><% end %></li>
      <li class ="<%= "active" if current_page?(followings_user_path(@user))%>"><%= link_to followings_user_path(@user) do %>フォロー一覧<span class = "badge"><%= @count_followings %></span><% end %></li>
      <li class ="<%= "active" if current_page?(followers_user_path(@user))%>"><%= link_to followers_user_path(@user) do %>フォロワー一覧<span class = "badge"><%= @count_followers %></span><% end %></li>
      <li class ="<%= "active" if current_page?(likes_user_path(@user))%>"><%= link_to likes_user_path(@user) do %>お気に入り一覧<span class = "badge"><%= @count_likes %></span<% end %></li>
    </ul>
    
    <%= render "users", users: @followers %>
      