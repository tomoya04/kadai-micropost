<h3>いいねした投稿一覧</h3>

<ul class = "media-list">
   <% @microposts_like.each do |micropost| %>
      <li class="media">
        <div class="media-left">
          <img src= "<%= gravatar_url(micropost.user, { size: 50}) %>" alt="" >
        </div>
         <div class="media-body">
           <div>
             <%= link_to micropost.user.name, user_path(micropost.user) %>
           <span>投稿日時<%= micropost.created_at %></span>
           </div>
            <div>
              <p><%= micropost.content %></p>
            </div>
             
              <%= render "favorites/likes",micropost: micropost %>
         </li>
    <% end %>
</ul>